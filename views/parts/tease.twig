<article id="post-{{post.ID}}" class="uk-section uk-section-small uk-padding-remove-top item {{ post.class }}" data-template="tease.twig">
  <header>
    <h3 class="uk-article-title uk-h4">
      <a title="{{post.title}}" class="uk-link-reset" href="{{post.link}}">{{post.title}}</a>
    </h3>
    <p class="uk-article-meta">Written on {{post.date | date}}. Posted in
    {% for category in post.categories %}
      {% if not loop.last %}
      <a title="{{ category }}" href="{{ category.link }}">{{ category }}</a>,
      {% endif %}
      {% if loop.last %}
      <a title="{{ category }}" href="{{ category.link }}">{{ category }}</a>
      {% endif %}
    {% endfor %}
    </p>
  </header>
  {% if post.get_thumbnail %}
  <figure>
    <a title="{{ post.thumbnail.title }}" href="{{post.link}}">
      <img data-src="{{ post.thumbnail.src('organic-theme-featured-image-archive') }}" width="800" height="300" alt="{{ post.thumbnail.alt }}" uk-img>
    </a>
  </figure>
  {% endif %}
  <p hidden>{{ post.preview.read_more('') }}</p>
  <a href="{{post.link}}" title="Read More" class="uk-button uk-button-default">Read More</a>
</article>