<div id="HeaderBottom" class="header-bottom uk-light uk-visible@m darker-bg-primary" data-template="header-bottom.twig">
  <div class="uk-container">
    <nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
      <div class="uk-navbar-left pull-left-15">
        <ul class="uk-navbar-nav">
          {% if has_menu_main %}
          {% for item in menu_main.get_items %}
          {% if item.get_children %}
          <li class="{{ item.classes | join(' ') }}"><a href="{{ item.link }}">{{ item.title }}<span data-uk-icon="icon: triangle-down"></span></a>
            <div class="uk-navbar-dropdown">
              <ul class="uk-nav uk-navbar-dropdown-nav">
                {% for child in item.get_children %}
                <li>
                  <a href="{{ child.get_link }}">{{ child.title }}</a>
                    {% if child.children %}
                    <ul class="uk-nav-sub">
                      {% for third in child.children %}
                      <li>
                        <a href="{{ third.get_link }}">{{ third.title }}</a>
                      </li>
                      {% endfor %}
                    </ul>
                    {% endif %}
                </li>
                {% endfor %}
              </ul>
            </div>
          </li>
          {% else %}
          <li class="{{ item.classes | join(' ') }}"><a title="{{ item.title }}" href="{{ item.get_link }}">{{ item.title }}</a></li>
          {% endif %}
          {% endfor %}
          {% endif %}
        </ul>
      </div>
      <div class="uk-navbar-right"></div>
    </nav>
  </div>
</div>