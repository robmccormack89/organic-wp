<header id="SiteHeader" class="site-header" data-template="header.twig">
    
  <div id="HeaderTop" class="top-bar header-top uk-text-center uk-light theme-bg-darker">
    <div class="uk-container">

      {% if header_top %}
        {{header_top}}
      {% else %}
        Header Top Widget Area
      {% endif %}
      
    </div>
  </div>
  
  <div id="HeaderMain" class="header-main uk-section uk-section-small uk-visible@m theme-bg" data-template="header-main.twig">
    <div class="uk-container">
      <div class="desktop-header-grid" uk-grid>
        
        <div class="logo-left uk-width-1-2 uk-inline uk-light">
          <a class="uk-logo uk-text-bold uk-text-emphasis uk-position-center-left padding-left-40" title="{{ site.title }}" href="{{ site.url }}"><img data-src="/wp-content/themes/organicwp-theme/assets/images/organicforhealth-logo.png" uk-img=""> <span class="uk-margin-small-left">{{ site.title }}</span></a>
        </div>
        
        <div class="search-navs-right uk-width-1-2">
          
          <div class="account-links uk-text-right uk-margin-small-bottom uk-light" data-template="header-main-account.twig">
            {% if not user %}
              <a href="/my-account">Login / Register</a>
            {% else %}
              <a href="/my-account">My Account</a>
            {% endif %}
          </div>
          
          <nav class="search-cart uk-navbar-container uk-navbar-transparent uk-margin" uk-navbar>
            <div class="uk-navbar-right">
                
              <div id="SimpleSearchForm" class="uk-navbar-item height-content pull-right-30" data-template="header-main-search.twig">
                <form role="search" method="get" action="{{site.url}}" hidden>
                  <div class="uk-inline uk-light">
                    <a class="uk-form-icon uk-form-icon-flip uk-link-reset"><i class="fas fa-search fa-lg"></i></a>
                    <input class="uk-input uk-form-width-medium mark-this-value" type="text" placeholder="Search..." id="SearchDesktop" name="s" autocomplete="off">
                    <input type="hidden" name="post_type" value="post">
                  </div>
                </form>
                {{function ('get_product_search_form')}}
              </div>
              
              {% if is_cart or is_checkout  %}
                <div class="uk-navbar-item height-content pull-right-15">
                  <a class="cart-icon uk-margin-left uk-light" href="/basket" aria-expanded="false"><i class="fas fa-shopping-cart fa-2x"></i></a>
                  {% do action('cart_ajax_result_count') %}
                </div>
              {% else %}
                <div class="uk-navbar-item height-content pull-right-15">
                  <a class="cart-icon uk-margin-left uk-light" aria-expanded="false" href="#MiniCartModal" uk-toggle><i class="fas fa-shopping-cart fa-2x"></i></a>
                  {% do action('cart_ajax_result_count') %}
                </div>
              {% endif %}
                
            </div>
          </nav>
          
        </div>
          
      </div>
    </div>
  </div>
  
  <div id="HeaderBottom" class="header-bottom uk-visible@m theme-bg-darker boundary-align" data-template="header-bottom.twig">
    <div class="uk-container">
      <nav class="uk-navbar-container uk-navbar-transparent" uk-navbar>
        <div class="uk-navbar-left">
          <ul class="uk-navbar-nav the-main-menu pull-left-20">
            
            {% if has_menu_main %}
              
              {% for item in menu_main.get_items %}
              
                {% if item.get_children %}
                
                  <li class="uk-light {{ item.classes | join(' ') }}"><a href="{{ item.link }}">{{ item.title }}<i class="fas fa-angle-down menu-dropicon"></i></a>
                    <div class="uk-navbar-dropdown">
                      <ul class="uk-nav uk-navbar-dropdown-nav">
                        {% for child in item.get_children %}
                        <li>
                          <a href="{{ child.get_link }}">{{ child.title }}</a>
                            {% if child.children %}
                            <ul class="uk-nav-sub">
                              {% for third in child.children %}
                              <li>
                                <a href="{{ third.get_link }}">{{ third.title }}</a>
                              </li>
                              {% endfor %}
                            </ul>
                            {% endif %}
                        </li>
                        {% endfor %}
                      </ul>
                    </div>
                  </li>
                
                {% elseif item.mega_menu == 'yes' %}
                
                <li class=" {{ item.classes | join(' ') }}">
                  
                  <a class="uk-light" title="{{ item.title }}" href="{{ item.get_link }}">{{ item.title }}<i class="fas fa-angle-down menu-dropicon"></i></a>
                  
                  {% set the_menu = function('get_post', item.select_mega_menu ) %}
                
                  <div uk-drop="pos: bottom-justify; boundary: .boundary-align; boundary-align: true;offset: 0" class="theme-border-bottom">
                    <div class="uk-padding uk-background-default">
                      <div class="uk-container">
                        
                        {{the_menu.post_content}}
                        
                      </div>
                    </div>
                  </div>
                  
                </li>
                
                {% else %}
                
                  <li class=" {{ item.classes | join(' ') }}"><a class="uk-light" title="{{ item.title }}" href="{{ item.get_link }}">{{ item.title }}</a></li>
                
                {% endif %}
              
              {% endfor %}
            
            {% else %}
              <p class="uk-margin-remove uk-light">Add a menu to the Main Menu slot in Appearance > Menus</p>
            {% endif %}
          </ul>
        </div>
        <div class="uk-navbar-right uk-light"></div>
      </nav>
    </div>
  </div>
  
  <div id="HeaderMobile" class="header-mobile uk-hidden@m theme-bg" data-template="header-mobile.twig">
    
    <div uk-sticky="sel-target: .sticky-mobile-nav; cls-active: uk-navbar-sticky theme-bg">
      <nav class="sticky-mobile-nav uk-container uk-light" uk-navbar>
        
        <div class="uk-navbar-left">
          <a class="uk-navbar-toggle uk-navbar-item uk-text-emphasis" uk-toggle href="#mobile-offcanvas-nav"><i class="fas fa-bars fa-lg"></i><span class="uk-flex-last push-left-7">Menu</span></a>
          <div id="mobile-offcanvas-nav" class="mobile-slide-navbar" uk-offcanvas="flip: true; overlay: true">
            <div class="uk-offcanvas-bar uk-offcanvas-bar-animation uk-offcanvas-slide">
              <a uk-toggle="target: #mobile-offcanvas-nav" class="close-icon-header"><i class="fas fa-times fa-2x"></i></a>
              <ul class="uk-nav-default uk-nav-parent-icon uk-position-relative" uk-nav>
                {% if has_menu_mobile %}
                <li class="uk-nav-header uk-text-uppercase uk-text-bold uk-margin-small-bottom">MENU</li>
                  {% for item in menu_mobile.get_items %}
                    {% if item.get_children %}
                <li class="{{ item.classes | join(' ') }} uk-parent"><a href="{{ item.link }}">{{ item.title }}</a>
                  <ul class="uk-nav-sub">
                  {% for child in item.get_children %}
                    <li><a href="{{ child.get_link }}">{{ child.title }}</a></li>
                  {% endfor %}
                  </ul>
                </li>
                    {% else %}
                <li class="{{ item.classes | join(' ') }}"><a title="{{ item.title }}" href="{{ item.get_link }}">{{ item.title }}</a></li>
                    {% endif %}
                  {% endfor %}
                {% endif %}
                <li class="uk-nav-divider"></li>
                <li>
                  <form role="search" method="get"  class="uk-margin-top" action="{{site.url}}">
                    <div class="uk-inline uk-light">
                      <a class="uk-form-icon uk-form-icon-flip uk-link-reset"><i class="fas fa-search fa-lg"></i></a>
                      <input class="uk-input uk-form-width-medium" type="text" placeholder="Search for products" id="SearchMobile" name="s" autocomplete="off">
                    </div>
                  </form>
                </li>
              </ul>
            </div>
          </div>
        </div>
        
        <div class="uk-navbar-right">

          {% if not user %}
            <div class="uk-navbar-item account-links">
              <a href="/my-account">Login / Register</a>
            </div>
          {% else %}
            <div class="uk-navbar-item account-links">
              <a href="/my-account">My Account</a>
            </div>
          {% endif %}
        
          {% if is_cart or is_checkout  %}
            <div class="uk-navbar-item">
              <a class="cart-icon uk-icon uk-margin-left uk-light" aria-expanded="false"><i class="fas fa-shopping-cart fa-2x"></i></a>
              {% do action('cart_ajax_result_count') %}
            </div>
          {% else %}
            <div class="uk-navbar-item">
              <a class="cart-icon uk-icon uk-margin-left uk-light" aria-expanded="false" href="#MiniCartModal" uk-toggle><i class="fas fa-shopping-cart fa-2x"></i></a>
              {% do action('cart_ajax_result_count') %}
            </div>
          {% endif %}
            
        </div>
        
      </nav>
    </div>
    
    <div class="uk-section uk-text-center uk-light header-mobile-title-section">
      <a class="uk-logo uk-text-bold uk-text-emphasis font-1-5" title="{{ site.title }}" href="{{ site.url }}">{{ site.title }}</a>
    </div>
    
  </div>
  
  <div id="MiniCartModal" class="minicart-modal" uk-modal>
    <div class="uk-modal-dialog">
      <div class="uk-modal-body height-content" uk-overflow-auto>
        <div class="widget_shopping_cart_content">
          {% do action('custom_mini_cart') %}
        </div>
      </div>
    </div>
  </div>
    
</header>