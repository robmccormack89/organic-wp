{% extends 'base.twig' %}

{% block content %}

  <div class="uk-container" data-template="index.twig">
    
    {% include 'breads.twig' %}
      
    <div class="uk-section uk-section-small">
      <div class="uk-container uk-container-small">
      
        <h1 class="archive-title uk-h2">{{ title }}</h1>
        
        <hr class="uk-divider-small">
          
        <div class="archive-posts posts uk-grid-small" uk-grid>
          {% for post in posts %}
            {% include 'tease.twig' %}
          {% endfor %}
        </div>
        
        {% include 'pagination.twig' %}
        
        {% if posts is empty %}
          <p class="uk-text-emphasis">No posts found.</p>
        {% endif %}

      </div>
    </div>
      
  </div>

{% endblock  %}