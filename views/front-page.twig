{% extends 'base.twig' %}
{% block content %}

<div data-template="home.twig">
  
  <article id="page-{{post.ID}}" class="{{post.class}}">
    
      <div class="slider-section">
          <div>
              <div class="home-slider uk-position-relative uk-visible-toggle uk-light" tabindex="-1" uk-slider>
                  <ul class="uk-slider-items uk-grid uk-grid-match uk-grid-collapse">
                      <li class="uk-width-1-1">
                          <div class="uk-inline">
                              <img class="slider-image" data-src="/wp-content/themes/organicwp-theme/assets/images/fresh-carrots.jpg" alt="" uk-img>
                              <div class="uk-overlay uk-overlay-primary uk-light uk-position-center uk-text-center uk-animation-fade uk-container">
                                  <h2>Welcome to Organic for Health</h2>
                                  <p>We grow as much seasonal fruit and vegetables on our 14 acre farm as me and my family are able to. We also source the finest organic produce to sell at our markets and now online, so you can get the best quality food delivered straight to you door at the best value for your money.</p>
                                  <p class="uk-text-emphasis">Healthy Fields ➜ Healthy Foods ➜ Healthy Families</p>
                                  <a href="/shop" class="uk-button uk-button-default">Visit the Shop</a>
                              </div>
                          </div>
                      </li>
                  </ul>
                  <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
                  <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
              </div>
          </div>
      </div>
      
      <div class="home-cats uk-section uk-section-small">
        
          {% include 'site-notice.twig' %}
          
          <div class="uk-container padding-top-30 padding-bottom-30"><hr class="uk-divider-icon"></div>
        
          <div class="uk-container">
            
              <h2 class="uk-text-center">Shop by Category</h2>
              
              <div class="uk-child-width-1-2 uk-child-width-1-4@s uk-text-center uk-grid-small" uk-grid>

                  {% for item in shopcats %}
                  <div>
                      <a class="uk-link-reset uk-text-primary" id="{{ item.term_id }}" href="{{product_category_base}}/{{ item.slug }}">
                      <div class="uk-card uk-card-small uk-card-body uk-card-hover uk-background-muted">
                          {{ item.name }}
                      </div>
                      </a>
                  </div>
                  {% endfor %}
              
              </div>
            
          </div>

      </div>
      
      <div class="uk-container"><hr class="uk-divider-icon"></div>
      
      <div class="uk-section uk-section-small">
          <div class="uk-container">
            
              <h2 class="uk-text-center">Try our Subscription Boxes</h2>
                
              <div uk-slider>
                  <div class="uk-position-relative uk-visible-toggle" tabindex="-1">
                      <div class="uk-slider-items uk-child-width-1-2@s uk-child-width-1-4@m uk-grid uk-grid-small">
                          {% for post in subscription_products %}
                          {% include 'tease-product.twig' %}
                          {% endfor %}
                      </div>
                      <a class="uk-position-center-left uk-position-small uk-hidden-hover" href="#" uk-slidenav-previous uk-slider-item="previous"></a>
                      <a class="uk-position-center-right uk-position-small uk-hidden-hover" href="#" uk-slidenav-next uk-slider-item="next"></a>
                  </div>
                  <ul class="uk-slider-nav uk-dotnav uk-flex-center uk-margin"></ul>
              </div>
            
          </div>
      </div>
  
  </article>
  
</div>

{% endblock  %}