{% extends 'base.twig' %}

{% block spec_styles %}

  {% set default_header_bg = '/assets/images/stock/field.jpg' %}
  
  {% if post.thumbnail %}
    {% set header_bg = post.thumbnail.src %}
  {% else %}
    {% set header_bg = theme.link ~ '/assets/images/stock/field.jpg' %}
  {% endif %}
  
  <style>
    #PageTitleSection {
      background-image: url('{{header_bg}}');
      background-position: center;
      background-size: cover;
      background-repeat: no-repeat;
    }
  </style>
  
{% endblock %}

{% block pageheader %}
  <section id="PageTitleSection">
    <div class="uk-overlay-primary uk-light uk-width-1-1">
      <div class="uk-section uk-secton-large">
        <div class="uk-container uk-text-center">
          <div class="">
            <h1 class="uk-margin-small-top uk-h1">{{ post.title }}</h1>
          </div>
        </div>
      </div>
    </div>
  </section>
{% endblock %}

{% block content_inner %}
  <article id="page-{{post.ID}}" class=" uk-article uk-section uk-section-small uk-container uk-container-small {{post.class}}" data-template="contact.twig">
      
      <h1 class="uk-article-title page-title">{{post.title}}</h1>
      
      <hr class="uk-divider-small">

      <div class="article-content" uk-grid>
        
        <div class="uk-width-2-3@m">
          <h3>Email us:</h3>
          <ul uk-tab uk-switcher>
            <li><a href="#">General Information</a></li>
            <li><a href="#">Orders</a></li>
            <li><a href="#">Deliveries</a></li>
          </ul>
          <ul class="uk-switcher uk-margin">
            <li>{{ function('do_shortcode', '[contact-form-7 id="14" title="Information"]') }}</li>
            <li>{{ function('do_shortcode', '[contact-form-7 id="8307" title="Orders"]') }}</li>
            <li>{{ function('do_shortcode', '[contact-form-7 id="8308" title="Deliveries"]') }}</li>
          </ul>
        </div>
        
        <div class="uk-width-1-3@m">
        
          <h4>Our Locations:</h4>
        
          <p>
            9d Pearse Street,<br>
            Mullingar,<br>
            Co.Westmeath.
          </p>
        
          <p>
            Sheridans Cheesemongers,<br>
            Kells,<br>
            Co.Meath.
          </p>
          
          <h4>Contact Info:</h4>
        
          <p>
            Willie,<br>
            <a href="mailto:info@organicforhealth.ie">info@organicforhealth.ie</a>
          </p>
        
        </div>

      </div>
    
    </article>
{% endblock  %}