{% extends 'base.twig' %}

{% block spec_styles %}

  <!-- load in swiper-js css -->
  <link rel="stylesheet" href="https://swiperjs.com/package/swiper-bundle.min.css" />

  <!-- swiper-js css -->
  <style>
    /* general swiper css */
    .swiper-container {
      width: 100%;
      height: 100%;
    }
    /* banner slider */
    :root {
      --swiper-theme-color: #ffeb3bad;
    }
    .swiper-slide .uk-section.uk-secton-large {
      padding: 80px 0;
    }
    @media only screen and (max-device-width:767px) {
      .swiper-slide .uk-section.uk-secton-large {
        padding: 50px 0;
      }
    }
    /* info slider */
    #slideshow_info .uk-h5 {
      font-size: 18px;
    }
  </style>
  <!-- other -->
  <style>
  
    .home-cats-section .uk-inline img {
      transition: 0.3s;
    }
    
    .home-cats-section .uk-inline:hover img {
      transform: scale(1.1);
    }
    
    .front-page .related, .front-page .upsells {
      display: none;
    }
    
    .front-page .woocommerce-message {
      margin-bottom: 20px;
    }
    
    .front-page .uk-tab, .front-page #my-id {
      display: none;
    }
  
  </style>
  
  <style>
    .cpb_product_boxes_custom .cpb-boxes .cpb-inner {
      background: #f7fbf9;
      /* border: 1px solid #d6d6d6; */
      border: none;    
    }
    .cpb_product_boxes_custom .cpb-boxes .cpb-inner:hover:before {
      background: rgb(32 134 95 / 18%);
    }
    .cpb_product_boxes_custom .cpb-items .cpb-inner:hover .cpb-item-image:before {
      background-position: center 50%;
    }
    .cpb-custom-product-boxes-items .cpb-row {
      display: flex;
      flex-wrap: wrap;
      margin-right: unset;
      margin-left: -15px;
    }
    .right-boxes .uk-card {
      background: #fff;
      box-shadow: 0 14px 25px rgba(0,0,0,.16);
    }
    /* .cpb-boxes .uk-grid-column-small, .cpb-boxes.uk-grid-small {
      margin-left: -15px;
    } */
    .cpb-boxes .uk-grid-column-small>*, .cpb-boxes.uk-grid-small>* {
      padding-left: 5px;
    }
    .cpb-boxes.uk-grid-small>.uk-grid-margin {
      margin-top: 5px;
    }
    span.cpb_category_filters_item {
      margin: 0 25px 0 0px;
    }
    span.woocommerce-Price-amount {
      font-weight: 700;
    }
    .cpb_product_boxes_custom .cpb-boxes .cpb-inner:hover:before {
        opacity: 1;
        cursor: pointer;
        z-index: 100;
        background-image: url(https://organicforhealth.ie/wp-content/plugins/custom-product-boxes/assets/images/remove-icon-light.png);
        background-position: center 45%!important;
        background-repeat: no-repeat!important;
        background-size: 50px!important;
    }
    .woocommerce .cpb-item-image img {
        border: 4px double #e8e8e8;
    }
  </style>

{% endblock %}

